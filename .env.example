# Environment Configuration for LightRAG Unified Neo4j Vector Storage
# Copy this file to .env and update with your actual values

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Neo4j Configuration (Required)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# Unified Storage Configuration
UNIFIED_NEO4J_STORAGE=true
NEO4J_WORKSPACE=production

# Vector Configuration
NEO4J_VECTOR_DIMENSIONS=3072
NEO4J_VECTOR_SIMILARITY=cosine
NEO4J_VECTOR_QUANTIZATION=true

# HNSW Optimization Parameters
NEO4J_HNSW_M=16
NEO4J_HNSW_EF_CONSTRUCTION=200

# Performance Configuration
NEO4J_MAX_CONNECTION_POOL_SIZE=100
NEO4J_CONNECTION_TIMEOUT=30
NEO4J_MAX_TRANSACTION_RETRY_TIME=15

# Memory Configuration (for Neo4j Docker)
NEO4J_MEMORY_HEAP_MAX=8G
NEO4J_MEMORY_PAGECACHE=16G

# API Configuration
API_HOST=localhost
API_PORT=9621
API_TITLE=LightRAG GraphRAG Testing Framework
API_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development Configuration
LIGHTRAG_WORKING_DIR=rag_storage
LIGHTRAG_CACHE_SIZE=10000

# Performance Testing Configuration
PERFORMANCE_RESULTS_DIR=performance_results
PERFORMANCE_MONITORING_INTERVAL=30
PERFORMANCE_HISTORY_RETENTION_HOURS=24
EOF < /dev/null